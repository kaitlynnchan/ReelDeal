<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="2dp" android:right="2dp">
                <shape android:shape="rectangle" >
                    <solid
                        android:color="@color/colorSand" />
                    <padding
                        android:left="8dp"
                        android:right="8dp"/>
                    <corners
                        android:radius="5dp"/>
                    <stroke
                        android:width="2dp"
                        android:color="#473300" />

                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:top="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <solid
                        android:color="#473300"/>
                    <corners
                        android:radius="5dp"/>
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape android:shape="rectangle">
                    <solid
                        android:color="@color/colorSand" />
                    <corners
                        android:radius="5dp"/>
                    <stroke
                        android:width="2dp"
                        android:color="#473300" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>