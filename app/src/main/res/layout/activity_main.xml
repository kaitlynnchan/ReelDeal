<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ocean_background" >

    <ImageView
        android:id="@+id/imageFishLeft1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/fish"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="181dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageFishLeft2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:rotation="20"
        app:srcCompat="@drawable/fish"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="315dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageFishRight1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:rotation="-10"
        android:scaleX="-1"
        app:srcCompat="@drawable/fish"
        tools:layout_editor_absoluteX="635dp"
        tools:layout_editor_absoluteY="134dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageFishRight2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:rotation="-30"
        android:scaleX="-1"
        app:srcCompat="@drawable/fish"
        tools:layout_editor_absoluteX="615dp"
        tools:layout_editor_absoluteY="251dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textReelDeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/lobster"
        android:outlineSpotShadowColor="@color/colorBlue"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="3.5"
        android:shadowRadius="9"
        android:text="@string/reel_deal"
        android:textColor="#FFf8a43a"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlay"
        app:layout_constraintEnd_toEndOf="@+id/buttonPlay"
        app:layout_constraintStart_toStartOf="@+id/buttonPlay" />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_image"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="7dp"
        android:text="@string/play"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59000003" />

    <Button
        android:id="@+id/buttonOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/button_image"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/options"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonHelp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlay" />

    <Button
        android:id="@+id/buttonHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/help"
        android:textSize="18sp"
        android:background="@drawable/button_image"
        app:layout_constraintStart_toStartOf="@+id/buttonPlay"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlay" />

</androidx.constraintlayout.widget.ConstraintLayout>