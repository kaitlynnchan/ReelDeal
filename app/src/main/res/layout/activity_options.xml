<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <RadioGroup
        android:id="@+id/radioGroupSettings"
        android:layout_width="280dp"
        android:layout_height="162dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/mines6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Six Mines" />

        <RadioButton
            android:id="@+id/mines12"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Twelve Mines" />

        <RadioButton
            android:id="@+id/random"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Random Number" />
    </RadioGroup>

    <TextView
        android:id="@+id/settingsText"
        android:layout_width="555dp"
        android:layout_height="45dp"
        android:text="Choose the Number of Mines you would like to play with:"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />
</androidx.constraintlayout.widget.ConstraintLayout>