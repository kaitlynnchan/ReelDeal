<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <RadioGroup
        android:id="@+id/radioGroupTotalFishes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/numFishesOptions"
        app:layout_constraintStart_toStartOf="@+id/numFishesOptions"
        app:layout_constraintTop_toBottomOf="@+id/numFishesOptions"
        app:layout_constraintVertical_bias="0.155"></RadioGroup>

    <TextView
        android:id="@+id/numFishesOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="16dp"
        android:text="@string/num_fishes_options"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOptions" />

    <TextView
        android:id="@+id/textGameSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_size_options"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/numFishesOptions"
        app:layout_constraintStart_toEndOf="@+id/textOptions"
        app:layout_constraintTop_toTopOf="@+id/numFishesOptions" />

    <RadioGroup
        android:id="@+id/radioGroupSize"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textGameSize"
        app:layout_constraintTop_toTopOf="@+id/radioGroupTotalFishes"></RadioGroup>

    <TextView
        android:id="@+id/textOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/options"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>