<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ocean_background" >

  <!--  <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />
        -->

  <ImageView
      android:id="@+id/imageFishingPole"
      android:layout_width="692dp"
      android:layout_height="314dp"
      android:layout_marginTop="48dp"
      android:layout_marginEnd="176dp"
      android:layout_marginRight="176dp"
      android:visibility="visible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/fishing_pole" />

  <ImageView
      android:id="@+id/imageFishingRod"
      android:layout_width="692dp"
      android:layout_height="314dp"
      android:layout_marginTop="48dp"
      android:layout_marginEnd="176dp"
      android:layout_marginRight="176dp"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/fishing_rod" />

  <ImageView
      android:id="@+id/imageFishingWire"
      android:layout_width="wrap_content"
      android:layout_height="314dp"
      android:layout_marginEnd="144dp"
      android:layout_marginRight="144dp"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="@+id/imageFishingPole"
      app:layout_constraintTop_toTopOf="@+id/imageFishingPole"
      app:srcCompat="@drawable/fishing_wire" />

  <Button
      android:id="@+id/buttonSkip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginBottom="16dp"
      android:background="@drawable/button_shadow"
      android:text="SKIP"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <View
      android:id="@+id/viewOverlay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:alpha="0"
      android:background="#000000"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/textViewGameTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="300dp"
      android:layout_marginRight="300dp"
      android:text="GAME\n NAME"
      android:textSize="30sp"
      app:layout_constraintEnd_toEndOf="@+id/imageFishingPole"
      app:layout_constraintTop_toBottomOf="parent" />

  <TextView
      android:id="@+id/textViewTitleCenter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:alpha="0"
      android:padding="20dp"
      android:shadowColor="#FFFFFF"
      android:shadowDx="0.0"
      android:shadowDy="0.0"
      android:shadowRadius="50"
      android:text="GAME\n       NAME"
      android:textColor="#FFFFFF"
      android:textSize="50sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textViewAuthors"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:alpha="0"
      android:gravity="center"
      android:text="by Kaitlynn Chan and\n Sunayani Sarkar"
      android:textColor="#FFFFFF"
      android:textSize="18sp"
      app:layout_constraintEnd_toEndOf="@+id/textViewTitleCenter"
      app:layout_constraintStart_toStartOf="@+id/textViewTitleCenter"
      app:layout_constraintTop_toBottomOf="@+id/textViewTitleCenter" />

</androidx.constraintlayout.widget.ConstraintLayout>